page {
  padding-bottom: 90rpx;
}
.revice-address-row .address-btn {
  padding: 10rpx;
}
.revice-address-row .address-btn button {
  width: 60%;
}
.revice-address-row .address-info {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #838181;
}
.revice-address-row .address-info .user-info {
  flex: 5;
}
.revice-address-row .address-info .user-phone {
  flex: 3;
  text-align: right;
}
.car-content .car-title {
  font-size: 36rpx;
  padding: 10rpx;
  color: var(--themeColor);
  border-bottom: 1px solid currentColor;
}
.car-content .cart-main .car-item {
  display: flex;
  border-bottom: 1px solid #a8a7a7;
}
.car-content .cart-main .car-item navigator.car-img {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.car-content .cart-main .car-item navigator.car-img image {
  width: 80%;
}
.car-content .cart-main .car-item .car-info-wrap {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: space-around;
}
.car-content .cart-main .car-item .car-info-wrap .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #252424;
}
.car-content .cart-main .car-item .car-info-wrap .goods-price-wrap {
  display: flex;
  justify-content: space-between;
  padding-right: 15rpx;
}
.car-content .cart-main .car-item .car-info-wrap .goods-price-wrap .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.car-content .cart-main .car-item .car-info-wrap .goods-price-wrap .cart-num-tool {
  display: flex;
}
.car-content .cart-main .car-item .car-info-wrap .goods-price-wrap .cart-num-tool .goods-num {
  padding: 0 20rpx;
  height: 55rpx;
  line-height: 55rpx;
}
/**底部工具拦样式*/
.footer-tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #eeecec;
  display: flex;
  font-size: 30rpx;
}
.footer-tool .total-price-wrap {
  flex: 4;
  text-align: right;
  padding-right: 10rpx;
}
.footer-tool .total-price-wrap .total-price {
  font-weight: bold;
}
.footer-tool .total-price-wrap .total-price .total-price-text {
  font-size: 36rpx;
  color: var(--themeColor);
  font-weight: bold;
}
.footer-tool .total-price-wrap .price-mark {
  font-size: 28rpx;
}
.footer-tool .order-pay-wrap {
  flex: 2;
  line-height: 90rpx;
  background-color: var(--themeColor);
  color: white;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
}
